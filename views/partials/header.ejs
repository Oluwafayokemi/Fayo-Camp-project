<!DOCTYPE html>
<html>
<head>
    <!--<meta charset="utf-8" />-->
    <!--<meta http-equiv="X-UA-Compatible" content="IE=edge">-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css">    
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">    
    <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
    <title>YelpCamp</title>
</head>
    <body>
    <nav class="navbar navbar-expand-xl navbar-light bg-light">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/">FayoCamp</a>
        
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="<%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>" href="/campgrounds">Home <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                
                <div class="navbar-nav navbar-right">
                    <ul class="navbar-nav">
                        <% if(!currentUser){ %>
                        <li class="nav-item nav-link">                  
                            <a class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>" href="/login">Login</a>
                        </li>
                        <li class="nav-item nav-link">
                             <a class="<%= typeof page !== 'undefined' && page === 'register' ? 'nactive' : '' %>" href="/register">Sign Up</a>
                        </li>
                        <% } else { %>
                            <li class="navbar-item nav-link">
                                <a href="#">Signed In As <%= currentUser.username.toUpperCase() %></a>
                            </li>
                            <li class="navbar-item nav-link">
                                <a href="/logout">Logout</a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    
        <div class="container">
            <% if(error && error.length > 0) { %>
                <div class="alert alert-danger" role="alert">
            <%= error %>
                </div>
            <% } %>
            <% if(success && success.length > 0) { %>
                <div class="alert alert-success" role="alert">
            <%= success %>
                 </div>
            <% } %>
        </div>
    <div class="container">